# Application Settings
APP_NAME=FPL Optimizer API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY=dev-api-key-change-in-production

# FPL API
FPL_API_BASE_URL=https://fantasy.premierleague.com/api
FPL_API_TIMEOUT=30
FPL_API_MAX_RETRIES=3

# Redis Cache (optional - will work without Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_TTL=300

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:4200","http://localhost:8000"]
