# ===== APPLICATION SETTINGS =====
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=structured

# ===== SERVER CONFIGURATION =====
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ===== FPL API CONFIGURATION =====
FPL_API_URL=https://fantasy.premierleague.com/api
PLAYER_REPOSITORY_TYPE=fpl
FPL_TIMEOUT=30
FPL_RETRY_ATTEMPTS=3

# ===== CACHING CONFIGURATION =====
CACHE_ENABLED=true
CACHE_TYPE=memory
FPL_CACHE_TTL=3600

# ===== CORS CONFIGURATION =====
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:4200", "http://localhost:5000"]

# ===== OPTIONAL SETTINGS =====
# For production, set a strong secret key
# SECRET_KEY=your-secret-key-here

# For Redis caching (optional)
# REDIS_URL=redis://localhost:6379

# For database integration (optional)
# DATABASE_URL=postgresql://user:password@localhost/dbname